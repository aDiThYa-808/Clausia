generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  fullName  String?
  email     String?  @unique
  credits   Int
  policies  Policy[]

  @@map("profiles")
}


model Policy {
  id            String        @id @default(cuid())
  profileId     String
  profile       Profile       @relation(fields: [profileId], references: [id], onDelete: Cascade)

  productName   String
  productType   String
  lastUpdated   DateTime
  introduction  String

  sectionTitles String[]      // e.g., ["Information We Collect", ...]
  sectionBodies String[]      // e.g., ["We collect...", ...]

  tokensUsed    Int
  creditsUsed   Int
  status        PolicyStatus  @default(completed)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum PolicyStatus {
  completed
  draft
  failed
}
